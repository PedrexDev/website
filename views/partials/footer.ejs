<footer class="text-white py-5" style="background: linear-gradient(to right, #0f0c29, #302b63, #24243e);">
  <div class="container text-center">
    <div class="mb-3">
      <a href="/pdf/privacy.pdf" class="footer-link text-decoration-none mx-2 small"><%= __("privacy_policy") %></a>
      <span class="text-secondary mx-1">|</span>
      <a href="/pdf/terms.pdf" class="footer-link text-decoration-none mx-2 small"><%= __("terms_of_service") %></a>
    </div>

    <p class="mb-0">&copy; 2025 Petr Richter. <span class="text-secondary"><%= __("all_rights_reserved") %></span></p>
  </div>
</footer>

<% if (formSent) { %>
  <div class="toast-container position-fixed top-0 end-0 p-3">
    <div id="formSentToast" class="toast align-items-center text-white bg-success border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body">
          <%= __("toast_msg") %>
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
  </div>
<% } %>

<script>
  window.addEventListener('DOMContentLoaded', () => {
    const toastEl = document.getElementById('formSentToast');
    if (toastEl) {
      const toast = new bootstrap.Toast(toastEl);
      toast.show();
    }
  });
</script>

<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>AOS.init();</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.js"></script>
</body>
</html>
