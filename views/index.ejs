<%- include("partials/header") %>

<section id="home" class="d-flex align-items-center min-vh-100 py-5" style="background: linear-gradient(to right, #0f0c29, #302b63, #24243e);">
  <div class="container px-4">
    <div class="row flex-lg-row-reverse align-items-center g-5">
      <div class="col-lg-6 text-center text-lg-start" data-aos="zoom-in-left">
        <img src="/img/me.png" class="img-fluid w-100" alt="Me" loading="lazy">
      </div>
      <div class="col-lg-6" data-aos="fade-right">
        <h5 class="text-secondary"><%= __("home_title") %></h5>
        <h1 class="display-4 fw-bold text-white lh-1 mb-3">Petr Richter</h1>
        <p class="lead text-light fs-5"><%= __("job_title") %></p>
        <div class="d-grid d-sm-inline-flex gap-2">
          <a href="https://instagram.com/pedrexik" target="_blank" class="btn btn-instagram btn-lg px-4 py-2">
            <i class="fab fa-instagram me-2"></i>Instagram
          </a>
          <a href="https://discord.com/users/813812775968833586" target="_blank" class="btn btn-discord btn-lg px-4 py-2">
            <i class="fab fa-discord me-2"></i>Discord
          </a>
          <a href="https://github.com/PedrexDev" target="_blank" class="btn btn-github btn-lg px-4 py-2">
            <i class="fab fa-github me-2"></i>GitHub
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<section id="about" class="py-5 text-light" style="background: linear-gradient(to right, #0f0c29, #302b63, #24243e);">
  <div class="container">
    <h2 class="text-center mb-1" data-aos="fade-up"><i class="fas fa-user-astronaut me-2"></i><%= __("about_title") %></h2>
    <h6 class="text-center mb-5 text-secondary" data-aos="fade-up"><%= __("about_subtitle") %></h6>
    
    <div class="justify-content-center">
      <div data-aos="fade-up">
        <div class="contact-card p-4 rounded-4 shadow-lg w-100">
          <p class="fs-5"><%= __("about_text") %></p>
          <ul class="list-unstyled mt-4">
            <li class="mb-2 d-flex align-items-start">
              <i class="fas fa-code text-primary me-3 mt-1" style="width: 20px;"></i>
              <span><strong>Front-End:</strong> HTML5, CSS3, JavaScript</span>
            </li>
            <li class="mb-2 d-flex align-items-start">
              <i class="fab fa-bootstrap text-info me-3 mt-1" style="width: 20px;"></i>
              <span><strong><%= __("css_frameworks") %>:</strong> Bootstrap 5, Tailwind CSS</span>
            </li>
            <li class="mb-2 d-flex align-items-start">
              <i class="fab fa-node-js text-success me-3 mt-1" style="width: 20px;"></i>
              <span><strong>Back-End:</strong> Node.js, Express.js, Astro</span>
            </li>
            <li class="mb-2 d-flex align-items-start">
              <i class="fas fa-database text-warning me-3 mt-1" style="width: 20px;"></i>
              <span><strong><%= __("databases") %>:</strong> MongoDB, MySQL</span>
            </li>
            <li class="mb-2 d-flex align-items-start">
              <i class="fas fa-gamepad text-danger me-3 mt-1" style="width: 20px;"></i>
              <span><strong><%= __("game_engines") %>:</strong> Unity, Godot</span>
            </li>
            <li class="mb-2 d-flex align-items-start">
              <i class="fas fa-code text-muted me-3 mt-1" style="width: 20px;"></i>
              <span><strong><%= __("languages_for_games") %>:</strong> C#, GDScript, Lua</span>
            </li>
          </ul>
          <p class="fs-5"><%= __("about_footer") %></p>
        </div>
      </div>

      <div class="text-center mt-4" data-aos="fade-up" data-aos-delay="100">
        <img src="https://skillicons.dev/icons?i=html,css,js,nodejs,express,mongodb,mysql,bootstrap,tailwind,unity,godot"
          class="img-fluid shadow rounded-4 border border-light p-2"
          alt="Skills">
      </div>
    </div>
  </div>
</section>

<section id="projects" class="py-5 text-light" style="background: linear-gradient(to right, #0f0c29, #302b63, #24243e);">
  <div class="container">
    <h2 class="text-center" data-aos="fade-up"><i class="fas fa-laptop-code me-2"></i><%= __("projects_section_title") %></h2>
    <h6 class="text-center mb-5 text-secondary" data-aos="fade-up"><%= __("projects_section_subtitle") %></h6>
    <div class="row g-4">
      <div class="col-12" data-aos="zoom-in">
        <div class="card bg-dark text-white shadow-lg border-0" style="min-height: 250px;">
          <div class="card-body d-flex justify-content-center align-items-center text-center" style="height: 100%;">
            <h5 class="card-title mb-0">
              <i class="fas fa-hourglass-half me-2"></i><%= __("more_projects_soon") %>
            </h5>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section id="contact" class="py-5" style="background: linear-gradient(to right, #0f0c29, #302b63, #24243e);">
  <div class="container">
    <h2 class="text-center" data-aos="fade-up"><i class="fas fa-envelope me-2"></i><%= __("contact_title") %></h2>
    <h6 class="text-center mb-4 text-secondary" data-aos="fade-up"><%= __("contact_subtitle") %></h6>
    <div class="justify-content-center">
      <div>
        <form id="contactForm" action="/contact" method="POST" class="g-4 contact-card p-4 rounded-4 shadow-lg w-100 text-white" data-aos="fade-up" data-aos-delay="100">
          <div class="mb-4">
            <label class="form-label"><i class="fas fa-user me-1"></i> <%= __('contact_name') %></label>
            <input type="text" class="form-control" name="name" placeholder="<%= __('contact_name') %>" required>
          </div>
          <div class="mb-4">
            <label class="form-label"><i class="fas fa-envelope me-1"></i> <%= __('contact_email') %></label>
            <input type="email" class="form-control" name="email" placeholder="<%= __('contact_email') %>" required>
          </div>
          <div class="mb-4">
            <label class="form-label"><i class="fas fa-comment-dots me-1"></i> <%= __('contact_message') %></label>
            <textarea class="form-control" rows="4" name="message" placeholder="<%= __('contact_message') %>" required></textarea>
          </div>
          <div class="text-center">
            <button type="submit" class="btn btn-primary px-5 py-2"><i class="fas fa-paper-plane me-2"></i> <%= __("send_message") %></button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<%- include("partials/footer") %>
